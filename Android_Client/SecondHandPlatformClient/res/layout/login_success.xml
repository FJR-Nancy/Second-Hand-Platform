<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp" >

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="320dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/banner_img_dscrp"
                android:src="@drawable/banner_text" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/regist_success_dscrp"
                android:src="@drawable/login_success" />

            <Button
                android:id="@+id/successLogin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="#636265"
                android:text="@string/login"
                android:textColor="#ffffff" />
        </LinearLayout>

</LinearLayout>
